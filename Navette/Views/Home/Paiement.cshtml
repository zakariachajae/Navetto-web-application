
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5 px-5">
    <form action="" method="post">
        <div class="mb-4">
            <h2>Confirmer le paiement</h2>
        </div>
        <div class="row">

            <div class="col-md-8">
                <div class="card p-3">
                    <h6 class="text-uppercase">Details de paiement</h6>
                    <div class="inputbox mt-3"> <input type="text" name="nom de carte" class="form-control" required="required" value=""> <span>Nom de carte </span> </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="inputbox mt-3 mr-2"> <input type="text" name="numero carte" class="form-control" required="required" value=""> <i class="fa fa-credit-card"></i> <span>Numero de carte</span> </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex flex-row">
                                <div class="inputbox mt-3 mr-2"> <input type="text" name="date expiration" class="form-control" required="required"> <span>date d'expiration</span> </div>
                                <div class="inputbox mt-3 mr-2"> <input type="text" name="cvv" class="form-control" required="required"> <span>CVV</span> </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label"></label>
                        <div class="col-md-4">
                            <br>
                            <input type="submit" class="btn btn-warning" name="Payer" value="effectuer paiement" />
                        </div>
                    </div>
                    @if (ViewBag.codeAchat != null)
                    {
                        <div class="alert alert-success" role="alert">
                            le paiement est validé, voici votre code : @ViewBag.codeAchat, veuillez ramenez votre code de confirmation avec vous le jours de depart!
                            <p><a href="~/Content/ticket.txt" download>telecharger votre ticket ici</a></p>
                        </div>
                    }
                    else if (ViewBag.error1 != null)
                    {
                        <div class="alert alert-danger" role="alert">
                             @ViewBag.error1
                        </div>
                    }
                
                </div>

            </div>

            <div class="col-md-4">
                <div class="card card-blue p-3 text-black-50 mb-3">
                    <span>Total: </span>
                    <div class="d-flex flex-row align-items-end mb-3">
                        <h1 class="mb-0 yellow">@ViewBag.o.Prix</h1> <span>MAD</span>
                    </div> <span>Ville depart - Ville arrivée:<div><span>@ViewBag.o.VilleDepart - @ViewBag.o.VilleArrive </span></div> </span>
                    <span>Periode d'abonnement:<div><span>@ViewBag.o.PeriodeAbonnement</span></div> </span>
                    <span>Heure depart - Heure arrivée:<div><span> @ViewBag.o.HDepart.Hour.ToString().PadLeft(2, '0'):@ViewBag.o.HDepart.Minute.ToString().PadLeft(2, '0') - @ViewBag.o.HArrive.Hour.ToString().PadLeft(2, '0'):@ViewBag.o.HArrive.Minute.ToString().PadLeft(2, '0')</span></div> </span>
                    <span>Descrition: <div><span>@ViewBag.o.Desc</span></div></span>
                </div>




            </div>
    </form>
    </div>
    </div>
<div>
    @Html.ActionLink("retour", "Index", "Home")
</div>

